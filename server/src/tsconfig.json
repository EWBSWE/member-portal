{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "allowJs": true,
    "outDir": "../../server-dist"
  },
  "include": [
    "../src/**/*",
    "../test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
